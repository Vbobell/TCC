<!DOCTYPE html>
<html>
<body>
    <section class="page-content big-content" data-content="generic">
        <figure class="title-content">
            <img src="images/content/itens/file.png"/>
            <h2>Administrador</h2>
        </figure>
        <section class="big-inner-content table-content">
        <table class="registres">
            <thead>
                <tr class="row">
                    <td class="col-lg-5">
                        Nome
                    </td>
                    <td class="col-lg-4">
                        Registro
                    </td>
                    <td class="col-lg-3">
                        Ação
                    </td>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
        </section>
    </section>

    <script class="script-admin" data-content="generic">
        (function () {
            var getData = function(parametres){
            var tableHead = ['name_admin', 'registre'];
            $.ajax({
                url: '/admin/getData/admin',
                type: 'GET',
                data: parametres,
                async : false,
            }).done(function (data) {
                var registres = JSON.parse(data);
                $('table.registres tbody').html('');
                registres.forEach(function (item, i) {                   
                    $('table.registres tbody').append('<tr class="row view-row" id="row' + i + '"></tr>');
                    $('table.registres tbody tr#row' + i + '').after('<tr class="row hidden" id="editRow' + i + '"></tr>');
                
                    $('table.registres tbody tr#row' + i + '').append(
                        '<td class="col-lg-5">' + item.name_admin +'</td>'+
                        '<td class="col-lg-4">'+item.registre+'</td>'+
                        '<td class="col-lg-3 content-tools"><div class="tool open-edit" data-id="tr#editRow'+i+'"></div>'+
                        '<div class="tool remove" data-id="'+item.id_admin+'"></div></td>'
                    );
                    
                    $('table.registres tbody tr#editRow'+ i + '').append(
                        '<td class="col-lg-5"><input name="'+tableHead[0]+'" type="text" value="' + item.name_admin + '"/></td>'+
                        '<td class="col-lg-4"><input name="'+tableHead[1]+'" type="text" value="' + item.registre + '"/></td>'+
                        '<td class="col-lg-3"><div class="tool edit" data-id-edit=" '+item.id_admin+'" data-id="tr#editRow'+i+'"></div>'+
                        '<div class="tool cancel"></div></td>'
                    );
                });

                $('.open-edit').on('click', function(){
                    $('tr[id^="editRow"]').addClass('hidden').slideUp();
                    $($(this).attr('data-id')).removeClass('hidden').slideDown();
                    
                    $('tr[id^="editRow"], .view-row').removeClass('border-top-right-left edit-select border-right-bottom-left');

                    $(this).parents('.view-row').addClass('border-top-right-left edit-select');
                    $($(this).attr('data-id')).addClass('border-right-bottom-left');
                });

                $('.cancel').on('click', function(){
                    $('tr[id^="editRow"]').addClass('hidden').slideUp();
                });
    
                $('.remove').on('click', function(){
                    data = { 'idAdmin': $(this).attr('data-id')};
                    $.ajax({
                        url : 'admin/remove',
                        contentType: "application/json; charset=utf-8",
                        dataType: "json",
                        data : JSON.stringify(data),
                        async : false,
                        type: 'POST'
                    }).done(function(data){
                            getData({ 'limit': 10, 'offset': 0 });
                            alert('administrador removido!');
                    });
                });

                $('.edit').on('click', function(){
                    data = {
                        'name': $($(this).attr('data-id')).find('input[name="name_admin"]').val(),
                        'registre': $($(this).attr('data-id')).find('input[name="registre"]').val(),
                        'idAdmin' : $(this).attr('data-id-edit')
                    };
                    $.ajax({
                        url : 'admin/edit',
                        contentType: "application/json; charset=utf-8",
                        dataType: "json",
                        data : JSON.stringify(data),
                        async : false,
                        type: 'POST'
                    }).done(function(data){
                            getData({ 'limit': 10, 'offset': 0 });
                            alert('dados alterados!');
                    });
                });
            });
        }
        getData({ 'limit': 10, 'offset': 0 });
        })();
    </script>
</body>

</html>