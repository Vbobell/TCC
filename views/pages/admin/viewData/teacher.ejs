<!DOCTYPE html>
<html>
<body>
    <section class="page-content big-content" data-content="generic">
        <figure class="title-content">
            <img src="images/content/itens/file.png"/>
            <h2>Professor</h2>
        </figure>
        <section class="big-inner-content table-content">
        <table class="registres">
            <thead>
                <tr class="row">
                    <td class="col-lg-4">
                        Nome
                    </td>
                    <td class="col-lg-3">
                        Registro
                    </td>
                    <td class="col-lg-3">
                        Disciplina
                    </td>
                    <td class="col-lg-2">
                        Ação
                    </td>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
        </section>
    </section>

    <script class="script-teacher" data-content="generic">
        (function () {
            var getData = function(parametres){
            var tableHead = ['name_teacher', 'registre'];
            $.ajax({
                url: '/admin/getData',
                type: 'GET',
                data: parametres,
                async : false,
            }).done(function (data) {
                var registres = JSON.parse(data);
                $('table.registres tbody').html('');
                registres.forEach(function (item, i) {                   
                    $('table.registres tbody').append('<tr class="row view-row" id="row' + i + '"></tr>');
                    $('table.registres tbody tr#row' + i + '').after('<tr class="row hidden" id="editRow' + i + '"></tr>');
                
                    $('table.registres tbody tr#row' + i + '').append(
                        '<td class="col-lg-4">' + item.name_teacher +'</td>'+
                        '<td class="col-lg-3">'+item.registry+'</td>'+
                        '<td class="col-lg-3 teacher"id="teacherDiscipline'+item.id_teacher+'"</td>'+
                        '<td class="col-lg-2 content-tools"><div class="tool open-edit" data-id="tr#editRow'+i+'"></div>'+
                        '<div class="tool remove" data-id="'+item.id_teacher+'"></div></td>'
                    );
                    
                    $('table.registres tbody tr#editRow'+ i + '').append(
                        '<td class="col-lg-4"><input name="'+tableHead[0]+'" type="text" value="' + item.name_teacher + '"/></td>'+
                        '<td class="col-lg-3"><input name="'+tableHead[1]+'" type="text" value="' + item.registry + '"/></td>'+
                        '<td class="col-lg-3 teacherEdit"id="teacherDiscipline'+item.id_teacher+'"</td>'+
                        '<td class="col-lg-2"><div class="tool edit" data-id-edit=" '+item.id_teacher+'" data-id="tr#editRow'+i+'"></div>'+
                        '<div class="tool cancel"></div></td>'
                    );
                });

                $('.open-edit').on('click', function(){
                    $('tr[id^="editRow"]').addClass('hidden').slideUp();
                    $($(this).attr('data-id')).removeClass('hidden').slideDown();
                    
                    $('tr[id^="editRow"], .view-row').removeClass('border-top-right-left edit-select border-right-bottom-left');

                    $(this).parents('.view-row').addClass('border-top-right-left edit-select');
                    $($(this).attr('data-id')).addClass('border-right-bottom-left');
                });

                $('.cancel').on('click', function(){
                    $('tr[id^="editRow"]').addClass('hidden').slideUp();
                    $('tr[id^="editRow"], .view-row').removeClass('border-top-right-left edit-select border-right-bottom-left');
                });
    
                $('.remove').on('click', function(){
                    data = { 'entity': 'teacher','idTeacher': $(this).attr('data-id') };
                    $.ajax({
                        url : 'admin/remove',
                        contentType: "application/json; charset=utf-8",
                        dataType: "json",
                        data : JSON.stringify(data),
                        async : false,
                        type: 'POST'
                    }).done(function(data){
                            getData({'entity':'teacher', 'limit': 9, 'offset': 0 });
                            alert('administrador removido!');
                    });
                });

                $('.edit').on('click', function(){
                    data = {
                        'entity': 'teacher',
                        'name': $($(this).attr('data-id')).find('input[name="name_teacher"]').val(),
                        'registry': $($(this).attr('data-id')).find('input[name="registre"]').val(),
                        'idTeacher' : $(this).attr('data-id-edit')
                    };
                    $.ajax({
                        url : 'admin/edit',
                        contentType: "application/json; charset=utf-8",
                        dataType: "json",
                        data : JSON.stringify(data),
                        async : false,
                        type: 'POST'
                    }).done(function(data){
                            getData({'entity':'teacher', 'limit': 9, 'offset': 0 });
                            alert('dados alterados!');
                    });
                });
            });
        }
        getData({'entity':'teacher', 'limit': 9, 'offset': 0 });
        })();
    </script>
</body>

</html>